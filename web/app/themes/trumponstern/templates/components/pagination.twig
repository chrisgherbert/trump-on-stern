{% if pagination.pages %}
	<nav class="pagination">
		<ul class="pagination pagination__list">

			{% if pagination.prev %}
				<li class="pagination__item">
					<a href="{{pagination.prev.link}}" class="pagination__link prev {{pagination.prev.link|length ? '' : 'disabled'}}" title="Previous">
						<span aria-hidden="true">&laquo; Previous</span>
					</a>
				</li>
			{% endif %}

			{% for page in pagination.pages %}
				{% if page.link %}
					<li class="pagination__item {% if page.current %}active{% endif %}">
						<a class="pagination__link {{page.class}}" href="{{page.link}}" title="Go to page {{ page.title }}">
							{{page.title}}
						</a>
					</li>
				{% else %}
					<li class="pagination__item {% if page.current %}active{% endif %}">
						<span class="pagination__link {{page.class}}">
							{{page.title}}
						</span>
					</li>
				{% endif %}
			{% endfor %}

			{% if pagination.next %}
				<li class="pagination__item">
					<a href="{{pagination.next.link}}" class="pagination__link next {{pagination.next.link|length ? '' : 'disabled'}}" title="Next">
						<span aria-hidden="true">Next &raquo;</span>
					</a>
				</li>
			{% endif %}

		</ul>
	</nav>
{% endif %}